<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    <CheckBoxPreference 
        android:layout_width="wrap_content" 
        android:id="@+id/pref1" 
        android:layout_height="wrap_content" 
        android:key="auto-scan" 
        android:summary="Enable auto-scan of SMS to update ticktes." 
        android:defaultValue="true"
        android:title="Auto update tickets"/>
    <CheckBoxPreference android:key="auto-reminder" android:title="Auto add reminder" android:defaultValue="true" android:summary="Add reminders for booking date automatically."/>
    <ListPreference
            android:title="Reminder duration"
            android:summary="Default is 5 minutes"
            android:key="listPref"
            android:defaultValue="2"
            android:entries="@array/listArray"
            android:entryValues="@array/listValues" />
</PreferenceScreen>
